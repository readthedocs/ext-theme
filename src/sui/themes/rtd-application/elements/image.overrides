.ui.overlapping.avatar.images {
  margin-left: 0.25rem;
  > .ui.image,
  > a > .ui.image {
    width: 1.5rem;
    height: 1.5rem;
    margin-left: -0.5rem;
  }
}

// Used in the project/organization headers for now, to keep consistent line height
@microWidth: 26px;
.ui.micro.image {
    width: @microWidth;
    height: auto;
}
